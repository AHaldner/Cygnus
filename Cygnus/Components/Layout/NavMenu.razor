<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Cygnus</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetch">
                <span class="bi bi-clock-nav-menu" aria-hidden="true"></span> Cronjobs
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="packages">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Packages
            </NavLink>
            <nav class="flex-column">
                @for (var packageId = 0; packageId <= 2; packageId++)
                {
                    var packageType = Cygnus.Utils.PackageUtils.GetPackageType(packageId);
                    <div class="nav-item px-2">
                        <NavLink class="nav-link ms-2 my-1" href="@($"packages/{packageId}")">
                            @packageType
                        </NavLink>
                    </div>
                }
            </nav>
        </div>
    </nav>
</div>
